{
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "json.schemas": [{
      "fileMatch": [
          "appsscript.json"
      ],
      "url": "http://json.schemastore.org/appsscript"
  }, {
      "fileMatch": [
          ".clasp.json"
      ],
      "url": "http://json.schemastore.org/clasp"
  }]
}
